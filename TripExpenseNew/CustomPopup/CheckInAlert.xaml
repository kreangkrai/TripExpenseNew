<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
               x:Class="TripExpenseNew.CustomPopup.CheckInAlert"
               x:Name="this"
               Size="300,260">
    <Frame BackgroundColor="White"
           CornerRadius="10"
           Padding="10"
           VerticalOptions="Center"
           HorizontalOptions="Center"
           HasShadow="False"
           WidthRequest="300"
           HeightRequest="260">
        <VerticalStackLayout Spacing="5">
            <Label Text="{Binding Title, Source={x:Reference this}}"
                   FontSize="28"
                   FontAttributes="Bold" FontFamily="Rajdhani-Bold"
                   HorizontalOptions="Center" />
            <Label Text="{Binding Message, Source={x:Reference this}}"
                   FontSize="16"
                   HorizontalOptions="Center" FontFamily="Rajdhani-Medium"
                   LineBreakMode="WordWrap" />
            <VerticalStackLayout  Spacing="5" VerticalOptions="Center" HorizontalOptions="Fill" Padding="5">
                <Button Text="Customer"
                        BorderColor="#4CAF50"
                        BorderWidth="2"
                        FontSize="20"
                        TextColor="#4CAF50"
                        BackgroundColor="White"
                        FontAttributes="Bold"
                        FontFamily="Rajdhani-Bold"
                        ContentLayout="Right,20"
                        ImageSource="ap_passenger.png"
                        MaximumHeightRequest="50"
                        Style="{StaticResource ButtonStyle}"
                        Clicked="OnCustomerButtonClicked" HorizontalOptions="Fill"/>
                <Button Text="Other"
                        BorderColor="#F44336"
                        BorderWidth="2"
                        FontSize="20"
                        TextColor="#F44336"
                        BackgroundColor="White"
                        FontAttributes="Bold"
                        FontFamily="Rajdhani-Bold"
                        ContentLayout="Right,55"
                        ImageSource="ap_car.png"
                        MaximumHeightRequest="50"
                        Style="{StaticResource ButtonStyle}"
                        Clicked="OnOtherButtonClicked" HorizontalOptions="Fill"/>
                <Button Text="Gas Station"
                        BorderColor="#297CC0"
                        BorderWidth="2"
                        FontSize="20"
                        TextColor="#297CC0"
                        BackgroundColor="White"
                        FontAttributes="Bold"
                        FontFamily="Rajdhani-Bold"
                        ContentLayout="Right,5"
                        ImageSource="route.png"
                        MaximumHeightRequest="50"
                    Style="{StaticResource ButtonStyle}"
                    Clicked="OnGasButtonClicked" HorizontalOptions="Fill" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>