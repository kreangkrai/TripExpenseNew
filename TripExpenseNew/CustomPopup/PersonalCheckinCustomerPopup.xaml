<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="TripExpenseNew.CustomPopup.PersonalCheckinCustomerPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shell="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Size = "350,320"
    Color="Transparent">
    <Border
        Margin="5"
        Padding="0"
        BackgroundColor="White"
        Stroke="Transparent"
        StrokeShape="{RoundRectangle CornerRadius='20'}">
        <Grid
            Padding="20,10"
            ColumnDefinitions=".50*,.50*"
            ColumnSpacing="10"
            RowDefinitions="Auto,Auto,Auto"
            RowSpacing="15"
            VerticalOptions="Center">

            <!--  LABEL HEADER  -->
            <VerticalStackLayout
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Spacing="0">
                <!--  LABEL | CHECK IN  -->
                <Label
                    CharacterSpacing="1"
                    FontAttributes="Bold"
                    FontFamily="Rajdhani-Bold"
                    FontSize="32"
                    HorizontalOptions="Center"
                    Text="CHECK IN"
                    TextColor="#1C4698"
                    VerticalOptions="Center" />
                <!--  LABEL | (Customer)  -->
                <Label
                    CharacterSpacing="1"
                    FontAttributes="Bold"
                    FontFamily="Rajdhani-Bold"
                    FontSize="28"
                    HorizontalOptions="Center"
                    Text="(Customer)"
                    TextColor="#297CC0"
                    VerticalOptions="Center" />
            </VerticalStackLayout>

            <!--  CUSTOMER  -->
            <VerticalStackLayout
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Spacing="5">
                <!--  LABEL | Customer Name:  -->
                <Label
                    CharacterSpacing="1"
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Start"
                    Text="Customer Name:"
                    VerticalOptions="Center" />
                <!--  ENTRY | USERNAME  -->
                <Border
                    Stroke="#C8C8C8"
                    StrokeShape="RoundRectangle 5"
                    StrokeThickness="2">
                    <Entry
                        Margin="2"
                        CharacterSpacing="1"
                        x:Name="Text_Customer"
                        ClearButtonVisibility="WhileEditing"
                        FontSize="18"
                        Keyboard="Text"
                        Placeholder=" Ex. AGC Vinythai"
                        Text="{Binding Text}" />
                </Border>
            </VerticalStackLayout>

            <!--  BUTTON | Cancel  -->
            <Button
                x:Name="CancelBtn"
                Grid.Row="2"
                Padding="10,15"
                BackgroundColor="#EC221F"
                CharacterSpacing="2"
                Clicked="OnCloseButtonClicked"
                CornerRadius="10"
                FontAttributes="Bold"
                FontSize="22"
                HorizontalOptions="Fill"
                Text="Cancel"
                VerticalOptions="Center">
                <Button.Shadow>
                    <Shadow
                        Brush="Black"
                        Opacity="0.2"
                        Radius="5"
                        Offset="0,4" />
                </Button.Shadow>
            </Button>

            <!--  BUTTON | OK  -->
            <Button
                x:Name="OKBtn"
                Grid.Row="2"
                Grid.Column="1"
                Padding="10,15"
                BackgroundColor="#14AE5C"
                CharacterSpacing="2"
                Clicked="OnOKButtonClicked"
                CornerRadius="10"
                FontAttributes="Bold"
                FontSize="22"
                HorizontalOptions="Fill"
                Text="OK"
                VerticalOptions="Center">
                <Button.Shadow>
                    <Shadow
                        Brush="Black"
                        Opacity="0.2"
                        Radius="5"
                        Offset="0,4" />
                </Button.Shadow>
            </Button>

        </Grid>
    </Border>
</toolkit:Popup>
