<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TripExpenseNew.CompanyPage.Company"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shell="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Company"
    shell:Shell.NavBarIsVisible="False">

    <ScrollView>
        <Grid
            Padding="20,20"
            ColumnDefinitions=".25*,.25*,.25*,.25*"
            ColumnSpacing="15"
            RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
            RowSpacing="10">

            <!--  LABEL | ACTIVE TRIP  -->
            <Label
                Grid.Row="0"
                Grid.ColumnSpan="4"
                CharacterSpacing="1"
                FontAttributes="Bold"
                FontFamily="Rajdhani-Bold"
                FontSize="32"
                HorizontalOptions="Center"
                Text="ACTIVE TRIP"
                TextColor="#1C4698"
                VerticalOptions="Center" />
            <!--  LABEL | (Personal Car)  -->
            <Label
                x:Name="Text_Car"
                Grid.Row="1"
                Grid.ColumnSpan="4"
                CharacterSpacing="1"
                FontAttributes="Bold"
                FontFamily="Rajdhani-Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="(Company Car)"
                TextColor="#1C4698"
                VerticalOptions="Center" />

            <!--
                INFO |
            -->
            <Frame
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Padding="5,5"
                BorderColor="#BCBCBC"
                CornerRadius="20">
                <Grid
                    Padding="1,1"
                    ColumnDefinitions="*"
                    RowDefinitions="Auto,Auto,Auto">

                    <!--  IMAGE | clock  -->
                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        Aspect="AspectFit"
                        HeightRequest="30"
                        HorizontalOptions="Center"
                        Source="clock.png"
                        VerticalOptions="Center" />

                    <!--  LABEL | Time  -->
                    <Label
                        x:Name="trip_duration"
                        Grid.Row="1"
                        Grid.ColumnSpan="3"
                        CharacterSpacing="1"
                        FontFamily="Rajdhani-Bold"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="00:00"
                        TextColor="#000000"
                        VerticalOptions="Center" />

                    <!--  LABEL | Duration  -->
                    <Label
                        Grid.Row="2"
                        Grid.ColumnSpan="3"
                        CharacterSpacing="1"
                        FontFamily="Rajdhani-Medium"
                        FontSize="16"
                        HorizontalOptions="Center"
                        Text="Duration"
                        TextColor="#535353"
                        VerticalOptions="Center" />
                </Grid>
            </Frame>
            <!--  //////////////////////////////////////////////  -->

            <!--  INFO | Distance  -->
            <Frame
                Grid.Row="3"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Padding="5,5"
                BorderColor="#BCBCBC"
                CornerRadius="20">
                <Grid
                    Padding="0,0"
                    ColumnDefinitions="*"
                    RowDefinitions="Auto,Auto,Auto">

                    <!--  IMAGE | destination  -->
                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        Aspect="AspectFit"
                        HeightRequest="30"
                        HorizontalOptions="Center"
                        Source="destination.png"
                        VerticalOptions="Center" />

                    <!--  LABEL | Time  -->
                    <Label
                        x:Name="trip_distance"
                        Grid.Row="1"
                        Grid.ColumnSpan="3"
                        CharacterSpacing="1"
                        FontFamily="Rajdhani-Bold"
                        FontSize="24"
                        HorizontalOptions="Center"
                        Text="0 km"
                        TextColor="#000000"
                        VerticalOptions="Center" />

                    <!--  LABEL | Distance  -->
                    <Label
                        Grid.Row="2"
                        Grid.ColumnSpan="3"
                        CharacterSpacing="1"
                        FontFamily="Rajdhani-Medium"
                        FontSize="16"
                        HorizontalOptions="Center"
                        Text="Distance"
                        TextColor="#535353"
                        VerticalOptions="Center" />
                </Grid>
            </Frame>
            <!--  //////////////////////////////////////////////  -->

            <!--  LABEL | Active Trip Detail:  -->
            <Label
                x:Name="Text_Detail"
                Grid.Row="4"
                Grid.ColumnSpan="4"
                FontAttributes="Bold"
                FontFamily="Rajdhani-Bold"
                FontSize="24"
                HorizontalOptions="Start"
                Text="Active Trip Detail:"
                TextColor="#1C4698"
                VerticalOptions="Center" />

            <!--  Collection View | Active Trip Detail:  -->
            <Frame
                Grid.Row="5"
                Grid.ColumnSpan="4"
                Margin="1"
                Padding="5"
                BackgroundColor="White"
                BorderColor="DimGrey"
                CornerRadius="5"
                HasShadow="False">
                <StackLayout>
                    <CollectionView x:Name="TripCollectionView" HeightRequest="200">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="3" Orientation="Vertical" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                    Margin="1"
                                    Padding="5,1"
                                    BackgroundColor="{Binding FrameColor}"
                                    CornerRadius="5"
                                    HasShadow="False">
                                    <Grid
                                        Padding="1"
                                        RowDefinitions="Auto,Auto,Auto"
                                        RowSpacing="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            Grid.Row="0"
                                            Grid.ColumnSpan="2"
                                            FontFamily="Rajdhani-Bold"
                                            FontSize="20"
                                            Text="{Binding TextStatus}"
                                            VerticalOptions="Center" />
                                        <Image
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="10,0"
                                            HeightRequest="16"
                                            Source="{Binding IconLocationSource}"
                                            WidthRequest="16" />
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Padding="1"
                                            FontFamily="Rajdhani-Medium"
                                            FontSize="16"
                                            Text="{Binding TextLocation}"
                                            VerticalOptions="Center" />
                                        <Image
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="10,0"
                                            HeightRequest="16"
                                            Source="{Binding IconDateSource}"
                                            WidthRequest="16" />
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Padding="1"
                                            FontFamily="Rajdhani-Medium"
                                            FontSize="16"
                                            Text="{Binding TextDate}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>
            <!--  BUTTON | Check In  -->
            <Button
                x:Name="CheckInBtn"
                Grid.Row="6"
                Grid.ColumnSpan="4"
                Padding="10,5"
                BackgroundColor="#297CC0"
                CharacterSpacing="1"
                Clicked="CheckInBtn_Clicked"
                ContentLayout="Right,10"
                CornerRadius="20"
                FontAttributes="Bold"
                FontSize="22"
                HeightRequest="60"
                HorizontalOptions="Fill"
                ImageSource="check_in.png"
                Text="Check-in"
                VerticalOptions="Center" />

            <!--  LABEL | Active Trip Detail:  -->
            <Label
                x:Name="Current_Passenger"
                Grid.Row="7"
                Grid.ColumnSpan="4"
                FontAttributes="Bold"
                FontFamily="Rajdhani-Bold"
                FontSize="24"
                HorizontalOptions="Start"
                Text="Current Passenger : (0)"
                TextColor="#1C4698"
                VerticalOptions="Center" />

            <!--  CollectionView | Current Passenger:  -->
            <Frame
                x:Name="frame_passenger"
                Grid.Row="8"
                Grid.ColumnSpan="4"
                Margin="1"
                Padding="5"
                BackgroundColor="White"
                BorderColor="DimGrey"
                CornerRadius="5"
                HasShadow="False"
                IsVisible="False">
                <StackLayout Padding="10">
                    <CollectionView x:Name="PassengerCollectionView" HeightRequest="150">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="2" Orientation="Vertical" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                    Margin="5"
                                    Padding="5,1,5,2"
                                    CornerRadius="8"
                                    HasShadow="False">
                                    <Grid
                                        Padding="1"
                                        RowDefinitions="Auto,Auto"
                                        RowSpacing="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="100" />
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            Grid.Row="0"
                                            Grid.ColumnSpan="3"
                                            FontFamily="Rajdhani-Bold"
                                            FontSize="20"
                                            Text="{Binding TextPassenger}"
                                            VerticalOptions="Center" />
                                        <Image
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="1,0"
                                            HeightRequest="16"
                                            Source="{Binding IconDatePassengerSource}"
                                            WidthRequest="16" />
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Padding="3"
                                            FontFamily="Rajdhani-Medium"
                                            FontSize="16"
                                            Text="{Binding TextDatePassenger}"
                                            VerticalOptions="Center" />
                                        <Button
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Margin="1"
                                            BackgroundColor="#FF474C"
                                            Clicked="OnDropOffPassengerItemClicked"
                                            CommandParameter="{Binding .}"
                                            CornerRadius="15"
                                            FontAttributes="Bold"
                                            FontSize="14"
                                            HeightRequest="50"
                                            Text="Drop Off"
                                            TextColor="White" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>
            <!--  BUTTON | Add Passenger  -->
            <Button
                x:Name="AddPassengerBtn"
                Grid.Row="9"
                Grid.ColumnSpan="4"
                Padding="10,5"
                BackgroundColor="#14AE5C"
                CharacterSpacing="1"
                Clicked="AddPassengerBtn_Clicked"
                ContentLayout="Right,10"
                CornerRadius="20"
                FontAttributes="Bold"
                FontSize="22"
                HeightRequest="60"
                HorizontalOptions="Fill"
                ImageSource="add_passenger.png"
                Text="Add Passenger"
                VerticalOptions="Center" />

            <!--  BUTTON | Stop Trip  -->
            <Button
                x:Name="StopTripBtn"
                Grid.Row="10"
                Grid.ColumnSpan="4"
                Padding="10,5"
                BackgroundColor="#EC221F"
                CharacterSpacing="1"
                Clicked="StopTripBtn_Clicked"
                ContentLayout="Right,10"
                CornerRadius="20"
                FontAttributes="Bold"
                FontSize="22"
                HeightRequest="60"
                HorizontalOptions="Fill"
                ImageSource="stop_trip.png"
                Text="STOP TRIP"
                VerticalOptions="Center" />


        </Grid>
    </ScrollView>
</ContentPage>