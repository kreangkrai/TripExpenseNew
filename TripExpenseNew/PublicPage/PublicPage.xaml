<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TripExpenseNew.PublicPage.PublicPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shell="http://schemas.microsoft.com/dotnet/2021/maui"
    Title="StartPublic_Page"
    shell:Shell.NavBarIsVisible="False">
    <Grid
        Padding="10,10"
        ColumnDefinitions="*"
        RowDefinitions="Auto,Auto,Auto,Auto"
        RowSpacing="25"
        VerticalOptions="Center">

        <!--  IMAGE | minicar.gif  -->
        <Image
            Grid.Row="1"
            Aspect="AspectFit"
            HeightRequest="180"
            IsAnimationPlaying="True"
            Source="minicar.gif" />

        <!--  LABEL | PERSONAL CAR  -->
        <Label
            Grid.Row="0"
            CharacterSpacing="1"
            FontAttributes="Bold"
            FontFamily="Rajdhani-Bold"
            FontSize="32"
            HorizontalOptions="Center"
            Text="PUBLIC"
            TextColor="#1C4698"
            VerticalOptions="Center" />

        <!--  BUTTON | START  -->
        <Button
            x:Name="PublicStart"
            Grid.Row="2"
            Padding="10,5"
            BackgroundColor="#297CC0"
            CharacterSpacing="3"
            Clicked="PublicStart_Clicked"
            CornerRadius="20"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            HorizontalOptions="Center"
            IsEnabled="False"
            Text="{Binding ButtonPublicStartText}"
            TextColor="White"
            VerticalOptions="Center"
            WidthRequest="300" />


        <!--  BUTTON | CANCEL  -->
        <Button
            x:Name="PublicCancel"
            Grid.Row="3"
            Padding="10,5"
            BackgroundColor="#EB4D53"
            CharacterSpacing="3"
            Clicked="PublicCancel_Clicked"
            CornerRadius="20"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            HorizontalOptions="Center"
            Text="CANCEL"
            VerticalOptions="Center"
            WidthRequest="300" />

    </Grid>
</ContentPage>