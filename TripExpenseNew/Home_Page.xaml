<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TripExpenseNew.Home_Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shell="http://schemas.microsoft.com/dotnet/2021/maui"
    Title="Home_Page"
    shell:Shell.NavBarIsVisible="False">

    <Grid
        Padding="10,10"
        ColumnDefinitions=".10*,.80*,.10*"
        RowDefinitions="Auto,300,Auto,50,50,70,Auto"
        RowSpacing="20">

        <!--  BUTTON | LOG OUT  -->
        <Button
            x:Name="LogOutBtn"
            Grid.ColumnSpan="3"
            Padding="10,5"
            BackgroundColor="#1C4698"
            CharacterSpacing="01"
            Clicked="OnGoToLoginPageClicked"
            CornerRadius="10"
            FontSize="Small"
            HorizontalOptions="End"
            SemanticProperties.Hint="Counts the number of times you click"
            Text="LOG OUT"
            VerticalOptions="Center" />

        <!--  IMAGE | LOGO TRIP EXPENSE  -->
        <Image
            Grid.Row="1"
            Grid.Column="1"
            Aspect="AspectFit"
            HeightRequest="200"
            SemanticProperties.Description="dot net bot in a race car number eight"
            Source="logo_tripexpense.png" />

        <Label
            Grid.Row="1"
            Grid.Column="1"
            CharacterSpacing="2"
            FontFamily="Rajdhani-SemiBold.ttf"
            FontSize="16"
            SemanticProperties.HeadingLevel="Level2"
            Style="{StaticResource Headline}"
            Text="By Contrologic"
            TextColor="#A7A7A7"
            VerticalOptions="End" />

        <!--  BUTTON | LOG IN  -->
        <Button
            x:Name="AddTripBtn"
            Grid.Row="5"
            Grid.Column="1"
            Padding="10,5"
            BackgroundColor="#14AE5C"
            CharacterSpacing="03"
            CornerRadius="20"
            FontAttributes="Bold"
            FontSize="Large"
            HeightRequest="60"
            HorizontalOptions="Fill"
            SemanticProperties.Hint="Counts the number of times you click"
            Text="LOG IN"
            VerticalOptions="Center" />

        <!--  OPEN BTS | LAST TRIP DETAIL  -->
        <ImageButton
            Grid.Row="3"
            Grid.Column="2"
            Clicked="OnTapOpenBottomSheet"
            HorizontalOptions="Start"
            Scale="0.6"
            Source="icon_settings.png"
            VerticalOptions="Start">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="Scale" Value="0.6" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="Scale" Value="0.5" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="PointerOver" />
                    </VisualStateGroup>
                </VisualStateGroupList>
            </VisualStateManager.VisualStateGroups>
        </ImageButton>

        <!--  Bottom Sheet  -->
        <ContentView
            x:Name="LastTripBTS"
            Grid.Row="4"
            Grid.RowSpan="3"
            Grid.ColumnSpan="3"
            Padding="10"
            BackgroundColor="White"
            IsVisible="False"
            TranslationY="0">
            <ContentView.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnPanUpdated" />
            </ContentView.GestureRecognizers>
            <VerticalStackLayout Spacing="15">
                <BoxView
                    Margin="0,5"
                    HeightRequest="5"
                    HorizontalOptions="Center"
                    WidthRequest="50"
                    Color="Gray" />
                <Label
                    CharacterSpacing="1"
                    FontFamily="Rajdhani-Bold.ttf"
                    FontSize="28"
                    SemanticProperties.HeadingLevel="Level2"
                    Style="{StaticResource Headline}"
                    Text="SERVER NAME"
                    TextColor="#1C4698" />


                <Button
                    Margin="0,0"
                    BackgroundColor="#B2B2B2"
                    CharacterSpacing="03"
                    Clicked="OnCloseBottomSheet"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Text="Close" />

            </VerticalStackLayout>
        </ContentView>
    </Grid>
</ContentPage>