<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TripExpenseNew.Home_Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shell="http://schemas.microsoft.com/dotnet/2021/maui"
    Title="Home_Page"
    shell:Shell.NavBarIsVisible="False">
    <ScrollView>
        <Grid
            Padding="10,3"
            ColumnDefinitions=".30*,.40*,.30*"
            RowDefinitions="Auto,Auto,Auto,Auto,Auto,*"
            RowSpacing="10">

            <!--  LABEL | NAME & SURNAME  -->
            <ContentView
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Padding="5">
                <VerticalStackLayout>
                    <!--  LABEL | NAME  -->
                    <Label
                        x:Name="lbl_name"
                        CharacterSpacing="1"
                        FontFamily="Rajdhani-Bold"
                        FontSize="45"
                        HorizontalOptions="Start"
                        Text=""
                        TextColor="#000000" />
                    <!--  LABEL | SURNAME  -->
                    <Label
                        x:Name="lbl_lastname"
                        CharacterSpacing="1"
                        FontFamily="Rajdhani-Bold"
                        FontSize="30"
                        HorizontalOptions="Start"
                        Text=""
                        TextColor="#000000" />
                </VerticalStackLayout>
            </ContentView>

            <ContentView
                Grid.Row="0"
                Grid.Column="2"
                Padding="5">
                <!--  BUTTON | Log out  -->
                <Button
                    Padding="15"
                    BackgroundColor="Transparent"
                    Clicked="ImageButton_Clicked"
                    FontAttributes="Bold"
                    FontSize="22"
                    HeightRequest="60"
                    HorizontalOptions="End"
                    ImageSource="turn_off.png"
                    Text=""
                    TextColor="Black"
                    VerticalOptions="Start" />
            </ContentView>
            <!--  LABEL | STATUS  -->
            <Label
                Grid.Row="1"
                Padding="5"
                CharacterSpacing="1"
                FontFamily="Rajdhani-Bold"
                FontSize="24"
                HorizontalOptions="Start"
                Text="Status:"
                TextColor="#000000"
                VerticalOptions="Center" />

            <!--  STATUS (Active, Inactive, In Progress)  -->
            <Label
                x:Name="Text_Active"
                Grid.Row="1"
                Grid.Column="1"
                CharacterSpacing="1"
                FontAttributes="Bold"
                FontFamily="Rajdhani-Bold"
                FontSize="28"
                HorizontalOptions="Start"
                Text=""
                TextColor="#14AE5C"
                VerticalOptions="Center" />

            <ContentView Grid.Row="3" Grid.ColumnSpan="3">
                <StackLayout Spacing="15">
                    <!--  IMAGE | CAR  -->
                    <Image
                        x:Name="img_status"
                        Aspect="AspectFit"
                        HeightRequest="60"
                        VerticalOptions="End" />

                    <!--  LABEL | Ready to start a trip?  -->
                    <Label
                        x:Name="Text_Status"
                        CharacterSpacing="1"
                        FontFamily="Rajdhani-SemiBold"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="Ready to start a trip?"
                        TextColor="#000000"
                        VerticalOptions="Center" />

                    <!--  BUTTON | ADD TRIP  -->
                    <Button
                        x:Name="AddTripBtn"
                        Padding="5"
                        BackgroundColor="#297CC0"
                        CharacterSpacing="3"
                        Clicked="OnGoToModePageClicked"
                        CornerRadius="30"
                        FontAttributes="Bold"
                        FontFamily="Rajdhani-SemiBold"
                        FontSize="32"
                        HeightRequest="60"
                        HorizontalOptions="Fill"
                        Text="{Binding ButtonTripText}"
                        VerticalOptions="Center"
                        WidthRequest="300" />
                </StackLayout>
            </ContentView>

            <!--  INFO | LAST TRIP DETAIL  -->
            <ContentView
                Grid.Row="4"
                Grid.ColumnSpan="3"
                Padding="5">
                <Grid
                    Padding="5,10"
                    ColumnDefinitions=".20*,.80*"
                    RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                    RowSpacing="10">

                    <!--  LABEL | Last Trip Detail:  -->
                    <Label
                        Grid.Row="0"
                        Grid.ColumnSpan="3"
                        CharacterSpacing="1"
                        FontFamily="Rajdhani-Bold"
                        FontSize="24"
                        HorizontalOptions="Start"
                        Text="Last Trip Detail:"
                        TextColor="#000000"
                        VerticalOptions="Center" />

                    <!--  BORDER | LAST TRIP DETAIL  -->
                    <Border
                        Grid.Row="1"
                        Grid.RowSpan="7"
                        Grid.ColumnSpan="4"
                        Stroke="#778899"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="2" />

                    <!--  IMAGE | map_pin  -->
                    <Image
                        Grid.Row="2"
                        Grid.Column="0"
                        Aspect="AspectFit"
                        HeightRequest="30"
                        Source="map_pin.png"
                        VerticalOptions="Center" />
                    <!--  LABEL | CTL-(HQ) to Customer  -->
                    <Label
                        x:Name="txt_last_location"
                        Grid.Row="2"
                        Grid.Column="1"
                        CharacterSpacing="1"
                        FontFamily="Rajdhani-SemiBold"
                        FontSize="22"
                        HorizontalOptions="Start"
                        Text=""
                        VerticalOptions="Center" />

                    <!--  IMAGE | calendar  -->
                    <Image
                        Grid.Row="3"
                        Grid.Column="0"
                        Aspect="AspectFit"
                        HeightRequest="30"
                        Source="calendar.png"
                        VerticalOptions="Center" />
                    <!--  LABEL | Date 21/07/25  -->
                    <Label
                        x:Name="txt_last_date"
                        Grid.Row="3"
                        Grid.Column="1"
                        CharacterSpacing="1"
                        FontFamily="Rajdhani-SemiBold"
                        FontSize="22"
                        HorizontalOptions="Start"
                        Text=""
                        VerticalOptions="Center" />

                    <!--  IMAGE | route  -->
                    <Image
                        Grid.Row="4"
                        Grid.Column="0"
                        Aspect="AspectFit"
                        HeightRequest="35"
                        Source="route.png"
                        VerticalOptions="Center" />
                    <!--  LABEL | Distance 540.8 km  -->
                    <Label
                        x:Name="txt_last_distance"
                        Grid.Row="4"
                        Grid.Column="1"
                        CharacterSpacing="1"
                        FontFamily="Rajdhani-SemiBold"
                        FontSize="22"
                        HorizontalOptions="Start"
                        Text=""
                        VerticalOptions="Center" />

                    <!--  IMAGE | users  -->
                    <Image
                        Grid.Row="5"
                        Grid.Column="0"
                        Aspect="AspectFit"
                        HeightRequest="30"
                        Source="tachometer.png"
                        VerticalOptions="Center" />
                    <!--  LABEL | 3 Passengers  -->
                    <Label
                        x:Name="txt_last_mileage"
                        Grid.Row="5"
                        Grid.Column="1"
                        CharacterSpacing="1"
                        FontFamily="Rajdhani-SemiBold"
                        FontSize="22"
                        HorizontalOptions="Start"
                        Text=""
                        VerticalOptions="Center" />
                </Grid>
            </ContentView>


            <ContentView Grid.Row="5" Grid.ColumnSpan="3">
                <!--  BUTTON | Trip History  -->
                <Button
                    x:Name="HistoryBtn"
                    BackgroundColor="#E8E8E8"
                    BorderColor="#A3A2A2"
                    BorderWidth="0"
                    CharacterSpacing="3"
                    Clicked="HistoryBtn_Clicked"
                    CornerRadius="30"
                    FontAttributes="Bold"
                    FontFamily="Rajdhani-SemiBold"
                    FontSize="24"
                    HeightRequest="60"
                    HorizontalOptions="Fill"
                    Text="TRIP HISTORY"
                    TextColor="Black"
                    VerticalOptions="Center"
                    WidthRequest="300" />
            </ContentView>
            <!--  3C9BCB  -->
        </Grid>
    </ScrollView>
</ContentPage>