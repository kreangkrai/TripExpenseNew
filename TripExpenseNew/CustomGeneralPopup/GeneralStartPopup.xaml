<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="TripExpenseNew.CustomGeneralPopup.GeneralStartPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shell="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Color="Transparent">

    <Border
        Padding="0"
        BackgroundColor="White"
        Stroke="Transparent"
        StrokeShape="{RoundRectangle CornerRadius='20'}"
        WidthRequest="350">
        <ScrollView>
            <Grid
                Padding="20,20"
                ColumnDefinitions=".50*,.50*"
                ColumnSpacing="10"
                RowDefinitions="Auto,Auto,Auto,Auto"
                RowSpacing="15">

                <!--  LABEL | START TRIP  -->
                <Label
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    CharacterSpacing="1"
                    FontAttributes="Bold"
                    FontFamily="Rajdhani-Bold"
                    FontSize="32"
                    HorizontalOptions="Center"
                    Text="START TRIP"
                    TextColor="#1C4698"
                    VerticalOptions="Center" />

                <!--  CUSTOMER/LOCATION  -->
                <VerticalStackLayout
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Spacing="5">
                    <!--  LABEL | Customer/Location:  -->
                    <Label
                        CharacterSpacing="1"
                        FontAttributes="None"
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="Start Location:"
                        VerticalOptions="Center" />
                    <!--  ENTRY | USERNAME  -->
                    <Border
                        Stroke="#C8C8C8"
                        StrokeShape="RoundRectangle 5"
                        StrokeThickness="2">
                        <Entry
                            x:Name="Text_Location"
                            Margin="2"
                            CharacterSpacing="1"
                            ClearButtonVisibility="WhileEditing"
                            FontSize="18"
                            Keyboard="Text"
                            Placeholder=" Ex. CTL-(HQ)"
                            Text="{Binding Text}" />
                    </Border>
                </VerticalStackLayout>

                <!--  Mileage  -->
                <VerticalStackLayout
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Spacing="5">
                    <!--  LABEL | Job  -->
                    <Label
                        CharacterSpacing="1"
                        FontAttributes="None"
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="Mileage Start:"
                        VerticalOptions="Center" />
                    <!--  ENTRY | USERNAME  -->
                    <Border
                        Stroke="#C8C8C8"
                        StrokeShape="RoundRectangle 5"
                        StrokeThickness="2">
                        <Entry
                            x:Name="Text_Mileage"
                            Margin="2"
                            CharacterSpacing="1"
                            ClearButtonVisibility="WhileEditing"
                            FontSize="18"
                            Keyboard="Numeric"
                            Placeholder=" Ex. 123456"
                            Text="{Binding Text}" />
                    </Border>
                </VerticalStackLayout>

                <!--  BUTTON | Cancel  -->
                <Button
                    x:Name="CancelBtn"
                    Grid.Row="3"
                    Padding="10,15"
                    BackgroundColor="#EC221F"
                    CharacterSpacing="2"
                    Clicked="CancelBtn_Clicked"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    FontSize="22"
                    HorizontalOptions="Fill"
                    Text="Cancel"
                    VerticalOptions="Center">
                    <Button.Shadow>
                        <Shadow
                            Brush="Black"
                            Opacity="0.2"
                            Radius="15"
                            Offset="0,4" />
                    </Button.Shadow>
                </Button>

                <!--  BUTTON | OK  -->
                <Button
                    x:Name="OKBtn"
                    Grid.Row="3"
                    Grid.Column="1"
                    Padding="10,15"
                    BackgroundColor="#14AE5C"
                    CharacterSpacing="2"
                    Clicked="OKBtn_Clicked"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    FontSize="22"
                    HorizontalOptions="Fill"
                    Text="OK"
                    VerticalOptions="Center">
                    <Button.Shadow>
                        <Shadow
                            Brush="Black"
                            Opacity="0.2"
                            Radius="15"
                            Offset="0,4" />
                    </Button.Shadow>
                </Button>
            </Grid>
        </ScrollView>
    </Border>

</toolkit:Popup>