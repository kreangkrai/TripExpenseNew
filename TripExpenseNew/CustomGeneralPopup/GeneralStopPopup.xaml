<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="TripExpenseNew.CustomGeneralPopup.GeneralStopPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shell="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Color="Transparent">
    <Border
        Padding="0"
        BackgroundColor="White"
        WidthRequest="350"
        VerticalOptions="Center"
        Stroke="Transparent"
        StrokeShape="{RoundRectangle CornerRadius='20'}">
            <VerticalStackLayout
                Spacing="15"
                Padding="20">
                <!--  LABEL | START TRIP  -->
                <Label
                CharacterSpacing="1"
                FontAttributes="Bold"
                FontFamily="Rajdhani-Bold"
                FontSize="32"
                HorizontalOptions="Center"
                Text="STOP TRIP"
                TextColor="#1C4698"
                VerticalOptions="Center" />

                <!--  CUSTOMER/LOCATION  -->
                <VerticalStackLayout
                Spacing="5">
                    <Label
                    CharacterSpacing="1"
                    FontAttributes="None"
                    FontSize="20"
                    HorizontalOptions="Start"
                    Text="Stop Location:"
                    VerticalOptions="Center" />
                    <!--  ENTRY | USERNAME  -->
                    <Border
                    Stroke="#C8C8C8"
                    StrokeShape="RoundRectangle 5"
                    StrokeThickness="2">
                        <Entry
                        Margin="1"
                        x:Name="Text_Location"
                        CharacterSpacing="1"
                        ClearButtonVisibility="WhileEditing"
                        FontSize="18"
                        HeightRequest="40"
                        Keyboard="Text"
                        Placeholder=" Ex. CTL-(HQ)"
                        Text="" />
                    </Border>
                </VerticalStackLayout>

                <Grid
                    ColumnDefinitions=".50*,.50*"
                    ColumnSpacing="10">
                    <!--  BUTTON | Cancel  -->
                    <Button
                x:Name="CancelBtn"
                    Grid.Column="0"
                Padding="10,15"
                BackgroundColor="#EC221F"
                CharacterSpacing="2"
                Clicked="CancelBtn_Clicked"
                CornerRadius="10"
                FontAttributes="Bold"
                FontSize="22"
                HorizontalOptions="Fill"
                Text="Cancel"
                VerticalOptions="Center">
                        <Button.Shadow>
                            <Shadow
                        Brush="Black"
                        Opacity="0.2"
                        Radius="15"
                        Offset="0,4" />
                        </Button.Shadow>
                    </Button>

                    <!--  BUTTON | OK  -->
                    <Button
                x:Name="OKBtn"
                Grid.Column="1"
                Padding="10,15"
                BackgroundColor="#14AE5C"
                CharacterSpacing="2"
                Clicked="OKBtn_Clicked"
                CornerRadius="10"
                FontAttributes="Bold"
                FontSize="22"
                HorizontalOptions="Fill"
                Text="OK"
                VerticalOptions="Center">
                        <Button.Shadow>
                            <Shadow
                        Brush="Black"
                        Opacity="0.2"
                        Radius="15"
                        Offset="0,4" />
                        </Button.Shadow>
                    </Button>
                </Grid>
            </VerticalStackLayout>
    </Border>
</toolkit:Popup>