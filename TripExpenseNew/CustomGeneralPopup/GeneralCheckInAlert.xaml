<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="TripExpenseNew.CustomGeneralPopup.GeneralCheckInAlert"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
    x:Name="this"
    Color="Transparent">
    <Frame
        Padding="10"
        BackgroundColor="White"
        CornerRadius="10"
        HasShadow="False"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        WidthRequest="350">
        <VerticalStackLayout Spacing="5">
            <Label
                FontAttributes="Bold"
                FontFamily="Rajdhani-Bold"
                FontSize="28"
                HorizontalOptions="Center"
                Text="{Binding Title, Source={x:Reference this}}" />
            <Label
                FontFamily="Rajdhani-Medium"
                FontSize="16"
                HorizontalOptions="Center"
                LineBreakMode="WordWrap"
                Text="{Binding Message, Source={x:Reference this}}" />
            <VerticalStackLayout
                Padding="5"
                HorizontalOptions="Fill"
                Spacing="10"
                VerticalOptions="Center">
                <Button
                    x:Name="Location"
                    BackgroundColor="#297CC0"
                    CharacterSpacing="1"
                    Clicked="Location_Clicked"
                    ContentLayout="Right,5"
                    FontAttributes="Bold"
                    FontFamily="Rajdhani-Bold"
                    FontSize="22"
                    HeightRequest="60"
                    HorizontalOptions="Fill"
                    ImageSource="industrial.png"
                    MaximumHeightRequest="60"
                    Text="Location"
                    TextColor="White">
                    <Button.Shadow>
                        <Shadow
                            Brush="Black"
                            Opacity="0.2"
                            Radius="5"
                            Offset="0,2" />
                    </Button.Shadow>
                </Button>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>
