<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
               x:Class="TripExpenseNew.CustomGeneralPopup.GeneralCheckInAlert"
               x:Name="this"
               Color="Transparent">
    <Frame BackgroundColor="White"
           CornerRadius="10"
           Padding="10"
           VerticalOptions="Center"
           WidthRequest="350"
           HorizontalOptions="Center"
           HasShadow="False">
        <VerticalStackLayout Spacing="5">
            <Label Text="{Binding Title, Source={x:Reference this}}"
                   FontSize="28"
                   FontAttributes="Bold" FontFamily="Rajdhani-Bold"
                   HorizontalOptions="Center" />
            <Label Text="{Binding Message, Source={x:Reference this}}"
                   FontSize="16"
                   HorizontalOptions="Center" FontFamily="Rajdhani-Medium"
                   LineBreakMode="WordWrap" />
            <VerticalStackLayout  Spacing="10" VerticalOptions="Center" HorizontalOptions="Fill" Padding="5">
                <Button Text="Location"
                        x:Name="Location"
                        FontSize="22"
                        TextColor="White"
                        CharacterSpacing="1"
                        BackgroundColor="#297CC0"
                        FontAttributes="Bold"
                        FontFamily="Rajdhani-Bold"
                        HeightRequest="60"
                        ContentLayout="Right,5"
                        ImageSource="industrial.png"
                        MaximumHeightRequest="60"
                        Clicked="Location_Clicked"  HorizontalOptions="Fill">
                    <Button.Shadow>
                        <Shadow
                        Brush="Black"
                        Opacity="0.2"
                        Radius="5"
                        Offset="0,2" />
                    </Button.Shadow>
                </Button>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>
