<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TripExpenseNew.Initial_Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shell="http://schemas.microsoft.com/dotnet/2021/maui"
    Title="Initial_Page"
    shell:Shell.NavBarIsVisible="False">

    <StackLayout Padding="60,120" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">
        <Image
            Aspect="AspectFit"
            HeightRequest="280"
            Source="logo_tripexpense.png" />

        <Button
            x:Name="EnterpriseBtn"
            Padding="10,5"
            BackgroundColor="#1C4698"
            CharacterSpacing="03"
            Clicked="OnGoToLoginPageClicked"
            CornerRadius="50"
            FontSize="Large"
            HeightRequest="100"
            HorizontalOptions="Center"
            SemanticProperties.Hint="Counts the number of times you click"
            Text="ENTERPRISE"
            VerticalOptions="Center"
            WidthRequest="300" />

        <Button
            x:Name="GeneralBtn"
            BackgroundColor="LightGrey"
            CharacterSpacing="03"
            CornerRadius="50"
            SemanticProperties.Hint="Counts the number of times you click"
            Text="GENERAL"
            VerticalOptions="End"
            HeightRequest="100"
            WidthRequest="300" />
    </StackLayout>

</ContentPage>