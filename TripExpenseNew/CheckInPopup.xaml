<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:xct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
           x:Class="TripExpenseNew.CheckInPopup"
           CanBeDismissedByTappingOutsideOfPopup="False"
           Size="300,200">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="กรุณากรอกข้อความ:" FontSize="Medium" />
        <Entry x:Name="TextEntry" Placeholder="พิมพ์ข้อความที่นี่" />
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="ตกลง" Clicked="OnSubmitClicked" />
            <Button Text="ยกเลิก" Clicked="OnCancelClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</xct:Popup>
